[Unit]
Description=Streamlit AWS Inspector Dashboard
After=network.target

[Service]
User=seu_usuario
WorkingDirectory=/caminho/para/seu/projeto
Environment="PATH=/caminho/para/seu/venv/bin"
ExecStart=/caminho/para/seu/venv/bin/streamlit run app.py --server.port 8501 --server.address 0.0.0.0
Restart=always

[Install]
WantedBy=multi-user.target 