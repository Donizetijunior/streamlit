[Unit]
Description=Streamlit AWS Inspector Dashboard
After=network.target

[Service]
User=root
WorkingDirectory=/root/streamlit
Environment="PATH=/root/streamlit/venv/bin"
ExecStart=/root/streamlit/venv/bin/streamlit run app.py --server.port 8501 --server.address 0.0.0.0
Restart=always

[Install]
WantedBy=multi-user.target 